# Django
SECRET_KEY=replace-with-a-long-random-secret-key-minimum-50-characters-123456
DEBUG=false
ALLOWED_HOSTS=yourdomain.com
TIMEZONE=UTC

# JWT
JWT_SECRET=replace-with-a-long-random-jwt-secret-key-1234567890

# Database
# For Docker Compose, web service overrides this to connect to db service
DATABASE_URL=postgres://careflow:careflow@localhost:5432/careflow

# Security
CSRF_TRUSTED_ORIGINS=https://yourdomain.com
SECURE_SSL_REDIRECT=true
SECURE_HSTS_SECONDS=31536000

# CORS
CORS_ALLOWED_ORIGINS=https://yourfrontend.com,https://admin.yourfrontend.com

# Logging
LOG_LEVEL=INFO

# API throttling
DRF_THROTTLE_ANON=60/minute
DRF_THROTTLE_USER=300/minute

# Gunicorn tuning
GUNICORN_WORKERS=3
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=60

# Optional demo bootstrap password
DEMO_PASSWORD=careflow-demo-strong-password
